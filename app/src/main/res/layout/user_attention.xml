<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linearLayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/userMes_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/userMes_image"
            android:layout_alignTop="@id/userMes_image"
            android:layout_alignBottom="@id/userMes_image"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/userMes_image"
                    android:textSize="19sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/userMes_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:textSize="15sp"
                    android:id="@+id/userMes_position"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/userMes_name" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userMes_hospital"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/userMes_name"
                    android:layout_toRightOf="@id/userMes_image"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:layout_marginTop="8dp"
                    android:id="@+id/textView7"
                    android:layout_alignBottom="@id/userMes_hospital"
                    android:layout_toEndOf="@+id/userMes_hospital" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/userMes_department"
                    android:layout_alignBottom="@id/textView7"
                    android:layout_toEndOf="@+id/textView7" />

            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>



</LinearLayout>
