<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="7dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="就诊日期"
            android:id="@+id/recoderMes_dat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recoderMes_dat"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="15dp"
            android:text="2016-05-23 下午"
            android:id="@+id/recoderMes_datee" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recoderMes_mes"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="订单编号："
            android:layout_marginTop="8dp"
            android:id="@+id/textView9" />
        <TextView
            android:id="@+id/recoderMes_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32449858"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/textView9"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"/>
        </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/linearLayout_1"
            android:layout_marginRight="5dp"
            android:background="#aa000000" />


        <RelativeLayout
            android:id="@+id/linearLayout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/linearLayout_1"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mini_avatar_shadow"
                android:layout_marginLeft="20dp"
                android:id="@+id/recoderMes_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/recoderMes_image"
                android:layout_alignTop="@id/recoderMes_image"
                android:layout_alignBottom="@id/recoderMes_image"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="bottom"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/recoderMes_image"
                        android:textSize="19sp"
                        android:text="dd"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/recoderMes_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5sp"
                        android:textSize="15sp"
                        android:text="ss"
                        android:id="@+id/recoderMes_position"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/recoderMes_name" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recoderMes_hospital"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:text="we"
                        android:layout_below="@+id/recoderMes_name"
                        android:layout_toRightOf="@id/recoderMes_image"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:layout_marginTop="8dp"
                        android:id="@+id/textView7"
                        android:layout_alignBottom="@id/recoderMes_hospital"
                        android:layout_toEndOf="@+id/recoderMes_hospital" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="fg"
                        android:id="@+id/recoderMes_department"
                        android:layout_alignBottom="@id/textView7"
                        android:layout_toEndOf="@+id/textView7" />

                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_marginTop="135dp"
            android:layout_marginBottom="10dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/linearLayout_4"
            android:layout_marginRight="5dp"
            android:background="#aa000000" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/linearLayout_2"
        >
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊人："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text"
            android:id="@+id/recoderMes_Uname"
            android:text="郭奥门"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginTop="5dp"
            android:text="就诊时间："/>
        <TextView
            android:id="@+id/recoderMes_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-05-23 下午"
            android:layout_below="@id/recoderMes_Uname"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/text2"/>

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="就诊须知"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"/>
        </LinearLayout>


    </RelativeLayout>




</LinearLayout>
