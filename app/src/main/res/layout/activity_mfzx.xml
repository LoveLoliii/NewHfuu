<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.com.newhfuu.MFZXActivity"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/rl_mianfeizixun"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal"
            android:background="#4BA5FF"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费咨询"
                android:textSize="30dp"
                android:layout_gravity="center"
                />


        </LinearLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="年龄"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="性别"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
             />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
             />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请尽可能详细的描述您的症状、既往病史，以便医生为您提供更好的解答"
        />

    <RelativeLayout
        android:id="@+id/rl_xuanzekeshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09">
        <TextView
            android:id="@+id/tv_xzke"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:text="请选择科室"
            />
        <ImageView
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:layout_alignParentRight="true"
            android:src="@drawable/toright"
            />

    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
